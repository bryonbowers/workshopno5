rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin email addresses
    function isAdmin() {
      return request.auth != null &&
             (request.auth.token.email == 'vani@workshopno5.com' ||
              request.auth.token.email == 'bryon.bowers@gmail.com');
    }

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Residential projects - public read, admin write
    match /residential-projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /residential-list/{itemId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Commercial projects - public read, admin write
    match /commercial-projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /commercial-list/{itemId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Contact form submissions - anyone can create, only admins can read
    match /contact-submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // User roles - only admins can read/write, users can read their own role
    match /user-roles/{userId} {
      allow read: if isAdmin() || isOwner(userId);
      allow write: if isAdmin();
    }

    // Active sessions - users can manage their own session, admins can read all
    match /active-sessions/{userId} {
      allow read: if isAdmin();
      allow create, update: if isOwner(userId);
      allow delete: if isOwner(userId) || isAdmin();
    }
  }
}
